<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin"
    android:focusableInTouchMode="true"
    android:focusable="false">

    <TextView
        android:id="@+id/btn_login_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"

        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_reg_haveaccount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txt_login_password"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:text="DON'T HAVE AN ACCOUNT?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintVertical_bias="0.833" />

    <TextView
        android:id="@+id/btn_login_singup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_reg_haveaccount2"
        android:layout_alignBottom="@+id/text_reg_haveaccount2"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/text_reg_haveaccount2"
        android:text="SIGN UP"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toEndOf="@+id/text_reg_haveaccount2"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/txt_login_email"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/txt_login_email"
        android:src="@drawable/person_logo" />

    <EditText
        android:id="@+id/txt_login_email"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_login"
        android:layout_alignEnd="@+id/btn_login"
        android:layout_marginBottom="86dp"
        android:hint="Email"
        android:maxLines="1"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txt_login_password"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/txt_login_email"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="13dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:maxLength="18"
        android:maxLines="1"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_reg_haveaccount2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/rounded_button"
        android:padding="20dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/btn_login_fpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_login_password"
        android:layout_alignBottom="@+id/txt_login_password"
        android:layout_alignEnd="@+id/txt_login_password"
        android:text="Forgot Password" />

</RelativeLayout>
